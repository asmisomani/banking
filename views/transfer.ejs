<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <title>Document</title>
    <style>
        body {
            display: flex;
            background-color: black;
            height: 100vh;
        }

        .container-xl {
            padding: 5rem;
            border-radius: 10px;
            width: 50vw;
            align-self: center;

            /* text-align: centers; */
        }

        .input-group {
            margin: 2rem 0px;
        }
    </style>
</head>

<body>
    <div class="container-xl bg-dark text-white align-middle justify-content-center">
        <h6>Current Amount</h6>
        <p>₹ <span id="amount">
                <%= pay %>
            </span></p>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">₹</span>
            <input type="text" class="form-control" placeholder="Enter Amount" aria-label="Recipient's username"
                aria-describedby="button-addon2" id="input" required />
            <button onclick="show()" class="btn btn-outline-secondary" type="button"
                id="button-addon2">Transfer</button>
        </div>
    </div>




    <script>

        function add() {
            var amount = document.getElementById('amount').innerHTML;
            console.log(amount);
            var input = document.getElementById('input').value;
            console.log(input);
            var newamnt = Number(amount) + Number(input);
            console.log(newamnt);
            document.getElementById('amount').innerHTML = newamnt;
        }

        function show() {
            var input = document.getElementById('input').value;
            if (input > 0) {
                if (confirm(`Do you want to transfer Rs${input}?`)) {
                    add();
                    alert(`Rs ${input} transferred SUCCESSFULLY`);
                }
                else {
                    alert(`Transfer Failed!`)
                }
            }
            else {
                alert(`Enter valid amount`);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>
</body>

</html>